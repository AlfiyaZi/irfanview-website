# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                       controllers.Application.index()
GET        /download.html          controllers.Application.download()
GET        /plugins.html           controllers.Application.download()
GET        /faq.html               controllers.Application.faq()
GET        /about.html             controllers.Application.about()
GET        /nice-sites.html        controllers.Application.niceSites()
GET        /full-changelog         controllers.Application.changeLog()


# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file           controllers.Assets.at(path="/public", file)
